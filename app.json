{
  "expo": {
    "name": "Toilet App",
    "slug": "toilet-app-mobile",
    "version": "1.0.0",
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.toiletapp.mobile",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs your location to find nearby toilets.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs your location to find nearby toilets."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.toiletapp.mobile",
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location to find nearby toilets."
        }
      ]
    ]
  }
}
